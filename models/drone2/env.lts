const N = 5
const S5 = 5

SRV = A[2],
A[i:2..N] = (
  m[1..N][i] -> A[(i-1)%(N-1)+2] // move clockwise
| when (i == S5) s[1..N][S5] -> A[S5]
).

TURN = TURN[0][1][2],
TURN[i:0..1][e:1..N][s:2..N] = (
  when (i == 0) m[t:1..N] -> TURN[1][t][s]
| when (i == 1) m[e][s] -> TURN[0][e][(s-1)%(N-1)+2]
| when (i == 1) s[e][S5] -> TURN[0][e][S5]
).
